<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@id/center"
        android:background="#333333"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"  />

        <ImageView
            android:id="@+id/centerEnd"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="#333333"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/center"
            android:layout_marginStart="54dp" />
            <Button
                android:id="@+id/button_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESETAR"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="40dp" />
<ImageView
    android:id="@+id/centerstart"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:background="#333333"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/center"
    android:layout_marginEnd="54dp" />
<ImageView
    android:id="@+id/top"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:background="#333333"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/center"
    android:layout_marginBottom="54dp" />
    <ImageView
        android:id="@+id/topend"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#333333"
        app:layout_constraintEnd_toEndOf="@id/centerEnd"
        app:layout_constraintBottom_toTopOf="@id/centerEnd"
        android:layout_marginBottom="54dp" />
        <ImageView

            android:id="@+id/topstart"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="#333333"
            app:layout_constraintStart_toStartOf="@id/centerstart"
            app:layout_constraintBottom_toTopOf="@id/centerstart"
            android:layout_marginBottom="54dp" />


    <ImageView
        android:id="@+id/back"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:background="#333333"
        app:layout_constraintEnd_toEndOf="@id/center"
        app:layout_constraintTop_toBottomOf="@id/center" />

    <ImageView
        android:id="@+id/backend"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#333333"
        app:layout_constraintEnd_toEndOf="@id/centerEnd"
        app:layout_constraintTop_toBottomOf="@id/centerEnd"
        android:layout_marginTop="54dp" />
    <ImageView
        android:id="@+id/backstart"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#333333"
        app:layout_constraintStart_toStartOf="@id/centerstart"
        app:layout_constraintTop_toBottomOf="@id/centerstart"
        android:layout_marginTop="54dp" />
</androidx.constraintlayout.widget.ConstraintLayout>